{
  "manifest_version": 3,
  "name": "Focus Productivity Extension",
  "version": "1.0.0",
  "description": "A comprehensive productivity extension with screen time monitoring, task management, and wellness features",

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "identity",
    "alarms"
  ],

  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://www.googleapis.com/*"
  ],

  "background": {
    "service_worker": "background-fresh.js"
  },

  "action": {
    "default_popup": "popup-simple.html",
    "default_title": "Focus Productivity Extension",
    "default_icon": {
      "16": "assets/icons/16.ico",
      "48": "assets/icons/48.ico",
      "128": "assets/icons/128.ico"
    }
  },

  "icons": {
    "16": "assets/icons/16.ico",
    "48": "assets/icons/48.ico",
    "128": "assets/icons/128.ico"
  },

  "web_accessible_resources": [
    {
      "resources": ["external-pages/*", "assets/sounds/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  }
}
